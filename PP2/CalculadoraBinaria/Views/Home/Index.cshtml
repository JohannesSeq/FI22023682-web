@{
    ViewData["Title"] = "Calculadora";
}

@model binarioModel;

<div class="text-center">
    <h1 class="display-4">Calculadora de binarios</h1>
</div>

<form asp-action="Index">
    <h2> Ingrese los numeros a calcular </h2>
    <div class = "form-group">
        <label>Numero A</label>
        <input type="text" class="form-control" id="a" placeholder="Ingrese el primer numero binario" asp-for="a">
        <span asp-validation-for="a" class="text-danger"></span>
    </div>
    <br />
    <div class = "form-group">
        <label for="exampleInputEmail1">Numero B</label>
        <input type="text" class="form-control" id="b" placeholder="Ingrese el segundo numero binario" asp-for="b">
        <span asp-validation-for="b" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Calcular</button>

</form>



@if (@Model != null){
    <div>
        <h2>Tabla de la verdad</h2>
        <table class="table">

            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Bin</th>
                    <th scope="col">Oct</th>
                    <th scope="col">Dec</th>
                    <th scope="col">Hex</th>
                </tr>    
            </thead>

            <tbody>
                <tr>
                    <td>a</td>
                    <td>@Model.a</td>
                    <td>@Model.ConversionOct(Model.a)</td>
                    <td>@Model.ConversionDec(Model.a)</td>
                    <td>@Model.ConversionHex(Model.a)</td>                
                </tr>
                <tr>
                    <td>b</td>
                    <td>@Model.b</td>
                    <td>@Model.ConversionOct(Model.b)</td>
                    <td>@Model.ConversionDec(Model.b)</td>
                    <td>@Model.ConversionHex(Model.b)</td>
                </tr>
                <tr>
                    <td>a AND b</td>
                    <td>@Model.aAndb</td>
                    <td>@Model.ConversionOct(Model.aAndb)</td>
                    <td>@Model.ConversionDec(Model.aAndb)</td>
                    <td>@Model.ConversionHex(Model.aAndb)</td>
                </tr>

                <tr>
                    <td>a OR b</td>
                    <td>@Model.aOrb</td>
                    <td>@Model.ConversionOct(Model.aOrb)</td>
                    <td>@Model.ConversionDec(Model.aOrb)</td>
                    <td>@Model.ConversionHex(Model.aOrb)</td>
                </tr>

                <tr>
                    <td>a XOR b</td>
                    <td>@Model.aXorb</td>
                    <td>@Model.ConversionOct(Model.aXorb)</td>
                    <td>@Model.ConversionDec(Model.aXorb)</td>
                    <td>@Model.ConversionHex(Model.aXorb)</td>
                </tr>

                <tr>
                    <td>a + b</td>
                    <td>@Model.aSumb</td>
                    <td>@Model.ConversionOct(Model.aSumb)</td>
                    <td>@Model.ConversionDec(Model.aSumb)</td>
                    <td>@Model.ConversionHex(Model.aSumb)</td>
                </tr>

                <tr>
                    <td>a • b</td>
                    <td>@Model.aMultb</td>
                    <td>@Model.ConversionOct(Model.aMultb)</td>
                    <td>@Model.ConversionDec(Model.aMultb)</td>
                    <td>@Model.ConversionHex(Model.aMultb)</td>
                </tr>

            </tbody>
        </table>
    </div>
}


